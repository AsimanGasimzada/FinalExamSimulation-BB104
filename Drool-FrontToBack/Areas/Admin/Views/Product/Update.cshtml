@using Drool_FrontToBack.Models
@model ProductUpdateVM
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="exampleInputEmail1" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" placeholder="Enter name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="exampleInputEmail1" asp-for="Description"></label>
        <input class="form-control" asp-for="Description" placeholder="Enter description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1" asp-for="Image"></label>
        <input class="form-control" asp-for="Image" >
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="exampleInputEmail1" asp-for="CategoryId"></label>
        @* <input class="form-control" asp-for="CategoryId" placeholder="Enter categoryId"> *@

        <select asp-for="CategoryId" class="form-select">
            @foreach (Category category in ViewBag.Categories)
            {
                        <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>